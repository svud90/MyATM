@{
    ViewBag.Title = "About";
    ViewBag.Message = "Our location";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div id="map" style="height:500px;width:100%;"></div>

@section scripts{
    <script>
          function initMap() {
            var brisbane = {lat: -27.471, lng: 153.0234};
            var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 13,
              center: brisbane
            });
            var marker = new google.maps.Marker({
              position: brisbane,
              map: map
            });
          }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBTNnjs-an_zKBKkYXKXcOfb0U9bKH4ADw&callback=initMap">
    </script>
}
